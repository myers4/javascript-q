      <script>
        $(document).ready(function(){
            var response = [];
            $("h1").click(function(){
              var concern = prompt("You don't look so good. What's the matter with you?");
                if(response.indexOf(concern) >= 0){

                }else{
                  console.log("nice");
                $("h2").html(concern);
                response.push(concern);
              }
            $("h2").click(function(){
              var roundTwo = prompt("Could you say that again?");
              if(response.indexOf(roundTwo) >= 0){
                $("h3").html("So " + concern + "? That just doesn't make any sense.")
              }else{
                console.log("hey now");
                $("h3").html(roundTwo + "? That sounds a little different than what you said last time.");
              }
            })
            })

        });

      </script>
